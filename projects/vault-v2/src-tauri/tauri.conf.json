{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "vault-v2",
  "version": "2.2.7",
  "identifier": "com.vault-v2.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "KeepKey Vault v2",
        "width": 1400,
        "height": 920
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "sql": {
      "preload": ["sqlite:vault.db"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["app", "dmg", "nsis", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "firmware/"
    ],
    "macOS": {
      "signingIdentity": "Developer ID Application: KEY HODLERS LLC (DR57X8Z394)",
      "hardenedRuntime": true,
      "entitlements": "./entitlements.plist",
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "certificateThumbprint": "986AEBA61CF6616393E74D8CBD3A09E836213BAA",
      "timestampUrl": "http://timestamp.sectigo.com",
      "digestAlgorithm": "sha256",
      "wix": {
        "skipWebviewInstall": false
      },
      "nsis": {
        "installMode": "perMachine",
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "allowDowngrades": true,
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "headerImage": "icons/icon.ico",
        "sidebarImage": "icons/icon.ico"
      }
    }
  }
}
